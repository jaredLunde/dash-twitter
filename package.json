{
  "name": "poc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "test": "jest --passWithNoTests",
    "start": "next build && next start",
    "validate": "yarn check-types && yarn lint && yarn test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,html,md,mdx,yml,json}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "pnpm lint -- --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "eslintIgnore": [
    "coverage",
    ".next",
    "build",
    "public",
    "test",
    "storybook-static",
    "/*.js"
  ],
  "dependencies": {
    "@dash-ui/compound": "^0.1.1",
    "@dash-ui/jest": "^2.1.2",
    "@dash-ui/layout": "^0.1.0",
    "@dash-ui/mq": "^0.4.1",
    "@dash-ui/react": "^0.9.1",
    "@dash-ui/reset": "^0.3.1",
    "@dash-ui/responsive": "^0.2.3",
    "@dash-ui/styles": "^0.8.6",
    "@dash-ui/transition": "^0.4.0",
    "@hookform/resolvers": "^2.8.0",
    "@radix-ui/react-id": "^0.0.6",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "latest",
    "@testing-library/user-event": "^12.1.1",
    "clsx": "^1.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-lunde": "^0.4.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "husky": "^4.3.8",
    "immer": "^9.0.5",
    "jest": "^27.0.6",
    "jotai": "^1.3.1",
    "lint-staged": "^10.5.3",
    "next": "11.1.0",
    "prettier": "^2.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.13.0",
    "yup": "^0.32.9",
    "zustand": "^3.5.9"
  },
  "devDependencies": {
    "@types/react": "17.0.19",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.0",
    "typescript": "4.3.5"
  }
}
