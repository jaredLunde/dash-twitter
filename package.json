{
  "name": "dash-twitter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build-storybook": "build-storybook -s ./public",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "start": "next build && next start",
    "storybook": "start-storybook -s ./public -p 6006",
    "test": "jest --passWithNoTests",
    "up": "pnpx vercel@latest",
    "validate": "pnpm check-types && pnpm lint -- --quiet && pnpm test -- --silent --coverage --maxWorkers=1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,html,md,mdx,yml,json}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --ext .js,.ts,.tsx- --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "eslintIgnore": [
    ".github",
    ".next",
    ".vercel",
    "build",
    "coverage",
    "public",
    "test",
    "storybook-static"
  ],
  "eslintConfig": {
    "plugins": [
      "@next/next"
    ],
    "extends": [
      "lunde",
      "plugin:@next/next/recommended"
    ],
    "settings": {
      "import/internal-regex": "^(@/.*)$"
    },
    "rules": {
      "no-empty-pattern": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/order": [
        "warn",
        {
          "pathGroups": [
            {
              "pattern": "@/**",
              "group": "internal"
            }
          ],
          "groups": [
            "builtin",
            "external",
            "internal",
            [
              "parent",
              "sibling",
              "index"
            ],
            "object"
          ],
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "sort-imports": [
        "warn",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": true,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ],
          "allowSeparatedGroups": false
        }
      ],
      "jsx-a11y/anchor-is-valid": "off",
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/prefer-ts-expect-error": "warn",
      "@typescript-eslint/consistent-type-imports": [
        "warn",
        {
          "prefer": "type-imports"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.test.{ts,tsx}"
        ],
        "settings": {
          "import/resolver": {
            "node": {
              "moduleDirectory": [
                "node_modules",
                "pages/"
              ]
            },
            "jest": {
              "jestConfigFile": "./package.json"
            }
          }
        }
      }
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": true
            }
          },
          "module": {
            "type": "commonjs"
          }
        }
      ]
    },
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "hooks",
      "pages",
      "stores",
      "styles",
      "test",
      "utils"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/{components,hooks,stores,styles,utils}/**/*.test.{js,jsx,ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ]
  },
  "dependencies": {
    "@dash-ui/compound": "^0.1.1",
    "@dash-ui/jest": "^2.1.2",
    "@dash-ui/layout": "^0.1.1",
    "@dash-ui/mq": "^0.4.1",
    "@dash-ui/react": "^0.9.1",
    "@dash-ui/reset": "^0.3.1",
    "@dash-ui/responsive": "^0.2.3",
    "@dash-ui/styles": "^0.8.6",
    "@dash-ui/transition": "^0.4.0",
    "@hookform/resolvers": "^2.8.0",
    "@next/eslint-plugin-next": "^11.1.2",
    "@next/plugin-storybook": "11.1.1-canary.17",
    "@radix-ui/react-alert-dialog": "^0.1.0",
    "@radix-ui/react-checkbox": "^0.1.0",
    "@radix-ui/react-dialog": "^0.1.0",
    "@radix-ui/react-dropdown-menu": "^0.1.0",
    "@radix-ui/react-hover-card": "^0.1.0",
    "@radix-ui/react-id": "^0.1.0",
    "@radix-ui/react-popover": "^0.1.0",
    "@radix-ui/react-radio-group": "^0.1.0",
    "@radix-ui/react-slider": "^0.1.0",
    "@radix-ui/react-switch": "^0.1.0",
    "@radix-ui/react-tabs": "^0.1.0",
    "@radix-ui/react-tooltip": "^0.0.21",
    "@radix-ui/react-visually-hidden": "0.1.0",
    "@react-hook/merged-ref": "^1.3.0",
    "@react-hook/window-size": "^3.0.7",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/builder-webpack5": "^6.3.8",
    "@storybook/manager-webpack5": "^6.4.0-alpha.34",
    "@storybook/react": "^6.3.8",
    "@swc/core": "^1.2.85",
    "@swc/jest": "^0.2.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "latest",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^27.0.1",
    "@types/react": "17.0.19",
    "clsx": "^1.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.32.0",
    "eslint-config-lunde": "^0.4.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "husky": "^4.3.8",
    "immer": "^9.0.6",
    "jest": "^27.1.1",
    "jotai": "^1.3.3",
    "lint-staged": "^10.5.4",
    "next": "11.1.0",
    "next-image-loader": "^2.0.4",
    "next-router-mock": "^0.2.4",
    "prettier": "^2.4.0",
    "qs-stringify": "^1.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.15.2",
    "storybook-addon-themes": "^6.1.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "4.3.5",
    "yup": "^0.32.9",
    "zustand": "^3.5.10"
  }
}
